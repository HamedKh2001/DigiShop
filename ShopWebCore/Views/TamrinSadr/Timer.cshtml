@model string
@{
}

<main class="main default">

    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">

                <div id="clockdiv" style="text-align:center">
                    <p class="text-blue font-weight-bolder" id="clock"></p>
                    <p class="text-blue font-weight-bolder">@Model</p>
                </div>

            </div>
        </div>
    </div>
</main>

<script>
    setInterval("settime()", 1000);

    function settime() {
        $.ajax({
            type: "Get",
            url: "/TamrinSadr/SetClock",
        }).done(function (res) {
            $("#clock").html(res);
        });
    }

</script>