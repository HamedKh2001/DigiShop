@model IEnumerable<CoreLayer.DTOs.ProductTitleDto>
@{
    @using CoreLayer.Utilities;
    bool activeslider = true;
}
<section id="main-slider" class="carousel slide carousel-fade card" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count(); i++)
        {
            <li data-target="#main-slider" data-slide-to="@i" class=@(i==0?"active":"")></li>
        }
    </ol>
    <div class="carousel-inner">
        @foreach (var product in Model)
        {
            <div class="carousel-item @(activeslider == true ?"active":null)">
                <a class="d-block" href="/SingleProduct/@product.id/@product.Slug">
                    <img src="@FileRoots.ReadProductphotoRoot@product.SliderPhoto"
                         class="d-block w-100" alt="">
                </a>
            </div>
            activeslider = false;
        }
    </div>
    <a class="carousel-control-prev" href="#main-slider" role="button" data-slide="prev">
        <i class="now-ui-icons arrows-1_minimal-right"></i>
    </a>
    <a class="carousel-control-next" href="#main-slider" data-slide="next">
        <i class="now-ui-icons arrows-1_minimal-left"></i>
    </a>
</section>