@model CoreLayer.DTOs.GroupProductDto
@{
    ViewData["title"] = "ویرایش دسته بندی ";
}


<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">@ViewData["title"]</h3>
    </div>
    <form role="form" method="post" asp-area="Admin" asp-controller="GroupProduct" asp-action="Edit">
        <div class="box-body">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="form-group col-md-6">
                <label asp-for="GroupName"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Slug"></label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="MetaTag"></label>
                <input asp-for="MetaTag" class="form-control" />
                <span asp-validation-for="MetaTag" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="MetaDescription"></label>
                <input asp-for="MetaDescription" class="form-control" />
                <span asp-validation-for="MetaDescription" class="text-danger"></span>
            </div>

                <div class="form-group col-md-6">
                    <label asp-for="ParentID"></label>
                    <select asp-for="ParentID" class="form-control">
                        <option value="0">گروه اصلی</option>
                    </select>
                </div>


        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-warning btn-lg" style="min-width:100%">ثــبــت</button>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        $.ajax({
            type: "Get",
            url: "/GetAllGroups"
        }).done(function (response) {
            console.log(response);
            for (var i in response) {
                var category = response[i];
                $("#ParentID").append(`<option value='${category.id}'>${category.groupName}</option>`);
            }
        });
    });
</script>
@section Scripts{


}

