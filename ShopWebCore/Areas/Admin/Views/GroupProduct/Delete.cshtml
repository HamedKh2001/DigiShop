@model CoreLayer.DTOs.GroupProductDto
@{
    ViewData["title"] = "حـذف گـروه";
}

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewData["title"]</h3>
        </div>
        <form role="form" method="post" asp-area="Admin" asp-controller="GroupProduct" asp-action="Delete">
            <div class="box-body">
                <input type="hidden" id="disabledTextInput" asp-for="Id" value="@Model.Id" />
                <fieldset disabled>

                    <div class="form-group col-md-6">
                        <label asp-for="GroupName" for="disabledTextInput"></label>
                        <input asp-for="GroupName" type="text" id="disabledTextInput" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Slug" for="disabledTextInput"></label>
                        <input asp-for="Slug" type="text" id="disabledTextInput" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MetaTag" for="disabledTextInput"></label>
                        <input asp-for="MetaTag" type="text" id="disabledTextInput" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MetaDescription" for="disabledTextInput"></label>
                        <input asp-for="MetaDescription" type="text" id="disabledTextInput" class="form-control">
                    </div>

                </fieldset>
                <div class="box-footer">
                    <button type="submit" class="btn btn-danger btn-lg" style="min-width:150px">حــذف</button>
                </div>
            </div>
        </form>
    </div>

@section Scripts{

}

