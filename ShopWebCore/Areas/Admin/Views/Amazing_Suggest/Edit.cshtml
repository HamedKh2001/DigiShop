@model DataLayer.Entities.Amazing_Suggest
@{
    ViewData["title"] = "ویرایش پیشنهاد شگفت انگیز";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">@ViewData["title"]</h3>
    </div>
    <form role="form" method="post" asp-area="Admin" asp-controller="Amazing_Suggest" asp-action="Edit">
        <div class="box-body">

            <div class="form-group col-md-6">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control select2 select2-hidden-accessible" asp-items="ViewBag.ProductList"></select>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="ExpireDate"></label>
                <input asp-for="ExpireDate" class="form-control" />
                <span asp-validation-for="ExpireDate" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="IsActive"></label>
                <input asp-for="IsActive" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>
        <div style="position:center" class="box-footer">
            <button type="submit" class="btn btn-success btn-lg" style="min-width:150px">ثــبــت</button>
        </div>
    </form>
</div>